<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Wordel.ViewModels"
             xmlns:components="clr-namespace:Wordel.Components"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="Wordel.Views.GameView">
  <Design.DataContext>
    <viewModels:GameViewModel />
  </Design.DataContext>
    <StackPanel Spacing="15">
        <Grid Height="50" ColumnDefinitions="Auto, *, Auto">
            <Image Grid.Column="0" Margin="5" PointerReleased="NewGame_OnPointerReleased" Source="/Assets/new.png"/>
            <TextPresenter Grid.Column="1" VerticalAlignment="Center" TextAlignment="Center" FontWeight="ExtraBold" FontSize="30">WORDEL</TextPresenter>
            <Image Grid.Column="2" Margin="5" PointerReleased="Settings_OnPointerReleased" Source="/Assets/cog.png"/>
        </Grid>
        <StackPanel Name="AnswerStackPanel" Spacing="5">
        </StackPanel>
    </StackPanel>
</UserControl>
